<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ImportGroup Label="PropertySheets" />
	<PropertyGroup Label="UserMacros" />

	<PropertyGroup>
		<!-- VC++ Directories -->
		<IncludePath>C:\CppLibs\OpenGL\includes\;$(IncludePath)</IncludePath>
		<LibraryPath>C:\CppLibs\OpenGL\lib\;$(LibraryPath)</LibraryPath>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<ClCompile>
			<!-- C/C++ Additional Include Directories -->
			<AdditionalIncludeDirectories>$(ProjectDir)\includes;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
		</ClCompile>
		<Link>
			<!-- Linker Additional Dependencies -->
			<AdditionalDependencies>glfw3.lib;opengl32.lib;%(AdditionalDependencies)</AdditionalDependencies>
		</Link>
	</ItemDefinitionGroup>

</Project>
